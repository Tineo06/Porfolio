const allTags = SOBREMI[0].tags;
const half = Math.ceil(allTags.length / 2);
const firstRow = allTags.slice(0, half);
const secondRow = allTags.slice(half);
---

<section class="my-10 max-w-full overflow-hidden">
    <p class="text-lg mb-8">{SOBREMI[0].descripcion}</p>

    <div class="relative flex flex-col gap-6 mask-gradient">
        
        <div class="flex overflow-hidden w-full">
            <div class="flex gap-4 animate-marquee">
                {firstRow.map((tag) => (
                    <div class={`flex items-center gap-2 px-4 py-2 rounded-full ${tag.class} whitespace-nowrap`}>
                        <tag.icono class="size-5" />
                        <span class="font-medium">{tag.nombre}</span>
                    </div>
                ))}
                {firstRow.map((tag) => (
                    <div class={`flex items-center gap-2 px-4 py-2 rounded-full ${tag.class} whitespace-nowrap`}>
                        <tag.icono class="size-5" />
                        <span class="font-medium">{tag.nombre}</span>
                    </div>
                ))}
            </div>
        </div>

        <div class="flex overflow-hidden w-full">
            <div class="flex gap-4 animate-marquee-reverse">
                {secondRow.map((tag) => (
                    <div class={`flex items-center gap-2 px-4 py-2 rounded-full ${tag.class} whitespace-nowrap`}>
                        <tag.icono class="size-5" />
                        <span class="font-medium">{tag.nombre}</span>
                    </div>
                ))}
                {secondRow.map((tag) => (
                    <div class={`flex items-center gap-2 px-4 py-2 rounded-full ${tag.class} whitespace-nowrap`}>
                        <tag.icono class="size-5" />
                        <span class="font-medium">{tag.nombre}</span>
                    </div>
                ))}
            </div>
        </div>

    </div>
</section>
<style>
    .animate-marquee {
        display: inline-block;
        white-space: nowrap;
        animation: marquee 20s linear infinite;
    }

    .animate-marquee-reverse {
        display: inline-block;
        white-space: nowrap;
        animation: marquee-reverse 20s linear infinite;
    }

    @keyframes marquee {
        0% {
            transform: translateX(0%);
        }
        100% {
            transform: translateX(-50%);
        }
    }

    @keyframes marquee-reverse {
        0% {
            transform: translateX(0%);
        }
        100% {
            transform: translateX(50%);
        }
    }

    .mask-gradient {
        mask-image: linear-gradient(to right, transparent, black 10%, black 90%, transparent);
        -webkit-mask-image: linear-gradient(to right, transparent, black 10%, black 90%, transparent);
    }
</style>